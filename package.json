  "devDependencies": {
    "chai": "^5.2.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^11.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0"
